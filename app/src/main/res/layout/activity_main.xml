<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/ipAddressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zyxel IP Address:" />

        <EditText
            android:id="@+id/ipAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""/>

        <TextView
            android:id="@+id/macAddressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zyxel MAC Address:"/>

        <EditText
            android:id="@+id/macAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""/>

        <TextView
            android:id="@+id/usernameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username:" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""/>

        <TextView
            android:id="@+id/passworLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password:"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/storeData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store IP, MAC and credentials" />

        <TextView
            android:id="@+id/nasStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: OFF"
            android:textColor="@color/colorRed"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/turnOnButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turn ON" />

        <Button
            android:id="@+id/turnOffButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turn OFF" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>